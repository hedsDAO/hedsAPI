{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./build/",
    "noImplicitAny": true,
    "module": "ES2015",
    "target": "ES5",
    "jsx": "react-jsx",
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@pages/*": ["src/pages/*"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@common/*": ["src/common/*"],
      "@models/*": ["src/models/*"],
      "@modules/modals/*": ["src/modules/modals/*"],
      "@modules/navigation/*": ["src/modules/navigation/*"]
    }
  },
  "exclude": ["node_modules", "build", "ipfs-http-client", "functions"]
}
